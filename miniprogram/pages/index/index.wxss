/* ========================================= */
/* 授权登录页样式 */
/* ========================================= */
.auth-container {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  box-sizing: border-box;
  background-color: #f3f4f6;
}

.auth-card {
  width: 100%;
  background: white;
  padding: 80rpx 50rpx;
  border-radius: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.auth-icon-placeholder {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(to bottom right, #34d399, #10b981);
  border-radius: 30rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 20rpx rgba(16, 185, 129, 0.2);
}

.auth-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid white;
  border-radius: 50%;
  position: relative;
}
.auth-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20rpx;
  height: 20rpx;
  background: white;
  border-radius: 50%;
}

.auth-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 20rpx;
  letter-spacing: 0.05em;
}

.auth-desc {
  font-size: 26rpx;
  color: #9ca3af;
  text-align: center;
  margin-bottom: 60rpx;
  line-height: 1.6;
}

.auth-input {
  width: 100%;
  height: 100rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 20rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
  text-align: center;
  color: #374151;
  transition: all 0.3s;
}

.auth-input:focus {
  border-color: #34d399;
  background: white;
}

.auth-btn {
  width: 100% !important;
  height: 100rpx;
  border-radius: 50rpx;
  background: linear-gradient(to right, #34d399, #10b981);
  color: white;
  font-weight: 500;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  box-shadow: 0 10rpx 20rpx rgba(16, 185, 129, 0.2);
  transition: transform 0.1s;
}

.auth-btn:active {
  transform: scale(0.98);
}

/* ========================================= */
/* 主功能页面设置 */
/* ========================================= */
page {
  background-color: #f3f4f6;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica, Arial, sans-serif;
  color: #1f2937;
  height: 100vh;
  overflow: hidden;
}

.container {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-sizing: border-box;
}

/* 装饰背景 - 柔和的绿色光晕 */
.bg-decoration-top {
  position: absolute;
  top: -100rpx;
  left: -100rpx;
  width: 500rpx;
  height: 500rpx;
  background-color: #ecfdf5; /* emerald-50 */
  border-radius: 50%;
  filter: blur(120rpx);
  z-index: 1;
  opacity: 0.8;
}

.bg-decoration-bottom {
  position: absolute;
  bottom: -100rpx;
  right: -100rpx;
  width: 500rpx;
  height: 500rpx;
  background-color: #f0fdf4; /* green-50 */
  border-radius: 50%;
  filter: blur(120rpx);
  z-index: 1;
  opacity: 0.8;
}

/* 顶部标题 */
.header {
  position: relative;
  width: 100%;
  padding: 60rpx 0 20rpx;
  display: flex;
  justify-content: center;
  z-index: 10;
}

.app-title {
  font-size: 26rpx;
  font-weight: 600;
  letter-spacing: 0.1em;
  color: #9ca3af;
  text-transform: uppercase;
}

/* 状态显示区 */
.main {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 60rpx;
  position: relative;
  z-index: 10;
}

.status-display-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  width: 100%;
  margin-bottom: 60rpx;
}

.time-display {
  font-size: 110rpx;
  font-weight: 200;
  letter-spacing: -0.05em;
  color: #1f2937; /* gray-800 */
  transition: all 0.5s ease;
  font-variant-numeric: tabular-nums; /* 等宽数字，防止跳动 */
}

.time-display.idle {
  color: #d1d5db; /* gray-300 */
  filter: blur(1rpx);
  transform: scale(0.95);
}

.status-hint-text {
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
}

.recording-text {
  color: #10b981; /* emerald-500 */
  font-size: 28rpx;
  font-weight: 500;
  letter-spacing: 0.1em;
  animation: pulse-opacity 2s infinite;
}

.playing-text {
  color: #059669;
  font-size: 28rpx;
  font-weight: 500;
}

.uploading-text {
  color: #3b82f6;
  font-size: 28rpx;
  font-weight: 500;
}

/* 波纹动画条 */
.waveform {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 80rpx;
  margin-top: 40rpx;
  transition: opacity 0.3s;
  opacity: 0;
}

.waveform.active {
  opacity: 1;
}

.wave-bar {
  width: 8rpx;
  background: linear-gradient(to top, #34d399, #059669);
  border-radius: 100rpx;
  height: 8rpx;
}

.bar-1 { animation: wave-pulse-1 0.6s infinite alternate; animation-delay: 0.1s; }
.bar-2 { animation: wave-pulse-2 0.8s infinite alternate; animation-delay: 0.2s; }
.bar-3 { animation: wave-pulse-3 0.5s infinite alternate; animation-delay: 0.3s; }
.bar-4 { animation: wave-pulse-4 0.7s infinite alternate; animation-delay: 0s; }
.bar-5 { animation: wave-pulse-5 0.9s infinite alternate; animation-delay: 0.4s; }

/* 交互区域 */
.interaction-area {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 300rpx; /* 增加高度给按钮组 */
  position: relative;
}

/* 录音大按钮 (Idle/Recording) */
.mic-btn-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
}

.mic-btn {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(to bottom, #34d399, #10b981);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 40rpx rgba(16, 185, 129, 0.3); /* 增强阴影 */
  transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.mic-btn.recording {
  width: 190rpx;
  height: 190rpx;
  background: #10b981;
  box-shadow: 0 0 60rpx rgba(16, 185, 129, 0.5);
}

.mic-pulse {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 50%;
  border: 4rpx solid #34d399;
  animation: ping 1.5s cubic-bezier(0, 0, 0.2, 1) infinite;
}

.mic-icon-svg {
  width: 60rpx;
  height: 60rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.mic-body {
  width: 22rpx;
  height: 40rpx;
  background: white;
  border-radius: 100rpx;
  position: relative;
  z-index: 2;
}

.mic-bottom {
  width: 36rpx;
  height: 18rpx;
  border: 4rpx solid white;
  border-top: 0;
  border-bottom-left-radius: 100rpx;
  border-bottom-right-radius: 100rpx;
  margin-top: -10rpx; /* 调整位置 */
  z-index: 1;
}

/* ========================================= */
/* 核心修复：操作按钮组对齐 */
/* ========================================= */
.action-buttons-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  /* 关键：使用 flex-start 以便手动控制垂直偏移 */
  align-items: flex-start;
  width: 100%;
  max-width: 580rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  animation: slide-up 0.4s ease-out;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

/* 严丝合缝对齐计算：
   中间按钮直径: 160rpx
   两边按钮直径: 110rpx
   半径差: (160 - 110) / 2 = 25rpx
   给两边按钮增加 25rpx 的顶部边距，即可让圆心完美水平对齐
*/
.action-item:nth-child(1),
.action-item:nth-child(3) {
  margin-top: 25rpx;
}

.action-item.disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* 按钮基础圆形 */
.action-circle {
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s;
}

.action-circle:active {
  transform: scale(0.92);
}

/* 中间主按钮 (播放) - 160rpx */
.action-circle.primary {
  width: 160rpx;
  height: 160rpx;
  /* 严格匹配原型渐变: emerald-400 -> green-500 */
  background: linear-gradient(to top right, #34d399, #22c55e);
  box-shadow: 0 12rpx 36rpx rgba(34, 197, 94, 0.3);
}

/* 两侧次级按钮 - 110rpx */
.action-circle.secondary {
  width: 110rpx;
  height: 110rpx;
  background: white;
  /* 极细边框和柔和阴影 */
  border: 2rpx solid #f3f4f6;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}

.action-label {
  font-size: 24rpx;
  color: #9ca3af;
  font-weight: 500;
  letter-spacing: 0.05em;
}

/* ========================================= */
/* CSS 图标精修 (仿 Lucide 风格) */
/* ========================================= */

/* 1. 垃圾桶 (Trash) */
.icon-trash {
  width: 32rpx;
  height: 36rpx;
  border: 3rpx solid #6b7280; /* text-gray-500 */
  border-top: none;
  border-bottom-left-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
  position: relative;
  margin-top: 8rpx;
}
/* 盖子 */
.icon-trash::before {
  content: '';
  position: absolute;
  top: -6rpx;
  left: -6rpx;
  width: 44rpx;
  height: 3rpx;
  background: #6b7280;
  border-radius: 2rpx;
}
/* 内部竖线 (用阴影模拟) */
.icon-trash::after {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 9rpx;
  width: 3rpx;
  height: 16rpx;
  background: #6b7280;
  box-shadow: 9rpx 0 #6b7280; /* 第二条竖线 */
}

/* 2. 播放 (Play) */
.icon-play {
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 22rpx 0 22rpx 36rpx;
  border-color: transparent transparent transparent white;
  margin-left: 8rpx; /* 视觉修正居中 */
  border-radius: 4rpx; /* 微微圆角 */
}

/* 3. 停止 (Square) */
.icon-square {
  width: 32rpx;
  height: 32rpx;
  background: white;
  border-radius: 6rpx;
}

/* 4. 上传 (Cloud/Upload Arrow) - 仿 Lucide UploadCloud */
.icon-upload {
  width: 44rpx;
  height: 30rpx;
  border-bottom: 3rpx solid #6b7280;
  position: relative;
  margin-top: 4rpx;
  /* 底部两边的小竖线 */
  border-left: 3rpx solid #6b7280;
  border-right: 3rpx solid #6b7280;
  border-bottom-left-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
}
/* 箭头杆 */
.icon-upload::before {
  content: '';
  position: absolute;
  top: -12rpx; /* 向上伸出 */
  left: 50%;
  transform: translateX(-50%);
  width: 3rpx;
  height: 24rpx;
  background: #6b7280;
}
/* 箭头尖 */
.icon-upload::after {
  content: '';
  position: absolute;
  top: -16rpx;
  left: 50%;
  transform: translateX(-50%) rotate(45deg);
  width: 14rpx;
  height: 14rpx;
  border-top: 3rpx solid #6b7280;
  border-left: 3rpx solid #6b7280;
  margin-left: -1rpx; /* 微调 */
}

/* Loading 圈 */
.icon-loader {
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid #e5e7eb;
  border-top-color: #10b981;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

/* 底部提示 */
.bottom-hint {
  position: absolute;
  bottom: 100rpx;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #9ca3af;
  transition: opacity 0.3s;
  opacity: 0;
}

.bottom-hint.visible {
  opacity: 1;
}

/* Toast */
.toast-container {
  position: absolute;
  top: 180rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  z-index: 100;
  pointer-events: none;
}

.toast-box {
  background: white;
  padding: 20rpx 40rpx;
  border-radius: 100rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  gap: 12rpx;
  border: 1rpx solid #f3f4f6;
}

.toast-box text {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
}

.toast-box.success {
  color: #059669;
  border-color: #ecfdf5;
}

.toast-box.warn {
  color: #f59e0b;
  border-color: #fffbeb;
}

.icon-check {
  width: 18rpx;
  height: 10rpx;
  border-left: 4rpx solid #059669;
  border-bottom: 4rpx solid #059669;
  transform: rotate(-45deg);
  margin-top: -4rpx;
}

/* 底部 File ID */
.file-info-footer {
  position: absolute;
  bottom: 20rpx;
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  color: #d1d5db;
}

/* ========================================= */
/* 动画 Keyframes 定义 (放在文件最底部) */
/* ========================================= */

@keyframes pulse-opacity {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

@keyframes wave-pulse-1 {
  0% { height: 10rpx; }
  100% { height: 80rpx; }
}

@keyframes wave-pulse-2 {
  0% { height: 10rpx; }
  100% { height: 40rpx; }
}

@keyframes wave-pulse-3 {
  0% { height: 10rpx; }
  100% { height: 90rpx; }
}

@keyframes wave-pulse-4 {
  0% { height: 10rpx; }
  100% { height: 50rpx; }
}

@keyframes wave-pulse-5 {
  0% { height: 10rpx; }
  100% { height: 70rpx; }
}

@keyframes ping {
  75% {
    transform: scale(2);
    opacity: 0;
  }
  100% {
    transform: scale(2);
    opacity: 0;
  }
}

@keyframes slide-up {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes spin {
  to { transform: rotate(360deg); }
}